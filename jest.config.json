{
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
  "testPathIgnorePatterns": ["<rootDir>/src/__tests__/__mocks__/"],
  "watchPathIgnorePatterns": ["<rootDir>/src/__tests__/__mocks__/"]
}
